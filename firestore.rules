rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{user} {
      allow read, update, delete: if request.auth != null && request.auth.uid == user;
      allow create: if request.auth != null;
    }
    match /plants/{plant} {
      allow read, update, delete: if request.auth != null && plant in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.plants;
      allow create: if request.auth != null;
    }
  }
}
